<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/public_rooms_list_bg"
              android:orientation="vertical">

	<LinearLayout
		android:id="@+id/public_rooms_item_wrapper"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/public_rooms_list_item_margin"
		android:layout_marginStart="@dimen/public_rooms_list_item_margin"
		android:layout_marginEnd="@dimen/public_rooms_list_item_margin"
		android:layout_marginTop="@dimen/public_rooms_list_item_margin"
		android:background="#fff"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingBottom="@dimen/public_rooms_list_item_padding_top_bottom"
			android:paddingTop="@dimen/public_rooms_list_item_padding_top_bottom"
			android:paddingStart="@dimen/public_rooms_list_item_padding_left_right"
			android:paddingEnd="@dimen/public_rooms_list_item_padding_left_right"
			android:layout_weight="0.92">

			<TextView
				android:id="@+id/public_rooms_item_name"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textSize="@dimen/public_rooms_list_item_room_name"
				android:textStyle="bold"/>

			<TextView
				android:id="@+id/public_rooms_item_days_ago"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/timestamp"
				android:textSize="@dimen/public_rooms_list_item_timestamp"/>

			<TextView
				android:id="@+id/public_rooms_item_description"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:linksClickable="true"
				android:paddingBottom="5dp"
				android:paddingTop="5dp"
				android:textColorLink="@color/link"/>
		</LinearLayout>

		<ImageView
			android:id="@+id/public_rooms_item_arrow"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/ic_chevron_right" android:layout_gravity="center_vertical"
		android:background="@color/colorPrimary">
		</ImageView>

	</LinearLayout>

</LinearLayout>